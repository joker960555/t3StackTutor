generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Post {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    content String @db.VarChar(255)
    authorId String
    comments Comment[]

    @@index([authorId])
} 
 
model Comment {
  id String @id @default(cuid())
  createdAt DateTime @default(now())

  content String @db.VarChar(255)
  authorId String
  post Post @relation(fields: [postId], references: [id])
  postId String 

  @@index([postId])
  @@index([authorId])
}